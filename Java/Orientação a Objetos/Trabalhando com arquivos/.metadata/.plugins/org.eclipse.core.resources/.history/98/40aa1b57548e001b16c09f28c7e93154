package application;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class MainProgram {

	public static void main(String[] args) {
		
		// # PROCESSO MANUAL DE ABRIR E FECHAR AS STREAMINGS:
		
		String path = "C:\\Users\\Davi\\Desktop\\Udemy\\Java Orientação a objetos\\Trabalhando com arquivos\\in.txt";
		FileReader fr = null;
		BufferedReader br = null;
		
		try {
			fr = new FileReader(path);
			br = new BufferedReader(fr);
			
			String line = br.readLine(); // # Lê uma linha do arquivo, se o arquivo já estiver no final... O readLine retorna Null.
			
			while (line != null) {
				System.out.println(line);
				line = br.readLine();
			}
		}
		catch(IOException e) {
			System.out.println("Error: " + e.getMessage());
		}
		finally {
			try {
				if (br != null) {
					br.close();
				}
				if (fr != null) {
					fr.close();
				}
			}
			catch (IOException e) {
				e.printStackTrace();
			}
			
		}
	}

}
